apiVersion: networking.istio.io/v1alpha3
kind: DestinationRule
metadata:
  name: spring-main
spec:
  host: spring-main
  subsets:
  - name: v1
    labels:
      version: v1
  trafficPolicy:
    tls:
      mode: SIMPLE
---
apiVersion: networking.istio.io/v1alpha3
kind: DestinationRule
metadata:
  name: spring-todo
spec:
  host: spring-todo
  subsets:
  - name: v1
    labels:
      version: v1
  - name: v2
    labels:
      version: v2
  trafficPolicy:
    tls:
      mode: SIMPLE
---
