apiVersion: networking.istio.io/v1alpha3
kind: DestinationRule
metadata:
  name: spring-main
spec:
  host: spring-main
  subsets:
  - name: v1
    labels:
      version: v1
  trafficPolicy:
    connectionPool:
      tcp:
        maxConnections: 1
        connectTimeout: 5s
      http:
        http1MaxPendingRequests: 1
        http2MaxRequests: 1
        idleTimeout: 2s
---
